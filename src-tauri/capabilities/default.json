{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "opener:default",
    "shell:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/core",
          "sidecar": true
        }
      ]
    },
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://127.0.0.1:*" },
        { "url": "http://localhost:*" }
      ]
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute"
  ]
}
